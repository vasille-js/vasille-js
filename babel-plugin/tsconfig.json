{
  "include": ["src/**/*", "test/**/*"],

  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "outDir": "lib",
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "Node16",
    "jsx": "preserve",
    "jsxFactory": "tag",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "types": ["jest", "node"]
  }
}
