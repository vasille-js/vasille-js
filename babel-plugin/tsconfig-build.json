{
  "include": ["src/**/*"],

  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "outDir": "./lib",
    "target": "ES2019",
    "module": "ES2015",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "types": ["jest", "node"]
  }
}
