{
  "include": ["src/**/*"],

  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "outDir": "lib",
    "target": "ES2015",
    "module": "ES6",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "types": [
      "estree",
      "json-schema",
      "jest",
    ]
  },
}
