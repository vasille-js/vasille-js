{
  "include": ["src/**/*"],

  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "target": "ES2015",
    "module": "ES6",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": [
      "estree",
      "json-schema",
      "node"
    ]
  },
}
